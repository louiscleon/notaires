{
  "version": 2,
  "builds": [
    {
      "src": "api/src/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/src/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 